<%= form_for(@hidden_players_var) do |f| %>

  <h3> Hidden Players </h3>

  <div class="field">
    <%= f.label :count %><br />
    <%= f.number_field :value %>
  </div>
  <br/>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, cols: 30, rows: 5 %>
  </div>
  <div class="actions">
    <%= f.submit :class => "btn btn-secondary" %> &nbsp; <%= link_to "Back to Vars", vars_path, :class => "btn btn-secondary" %>
  </div>
<% end %>

