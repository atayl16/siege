<%= form_for(@competition_state_var) do |f| %>
  <div class="field">
    <%= f.label :competition_state_var %><br />
    <%= f.select :value, ['ongoing', 'finished'] %>
  </div>
  <br/>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, cols: 30, rows: 5 %>
  </div>
  <div class="actions">
    <%= f.submit :class => "btn btn-secondary" %> &nbsp; <%= link_to "Back to Vars", vars_path, :class => "btn btn-secondary" %>
  </div>
<% end %>
