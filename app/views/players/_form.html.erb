<%= form_with(model: player) do |form| %>
  <% if player.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(player.errors.count, "error") %> prohibited this player from being saved:</h2>

      <ul>
        <% player.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <div>
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name %>
    </div>

    <div>
      <%= form.label :xp, style: "display: block" %>
      <%= form.number_field :xp %>
    </div>

    <div>
      <%= form.label :lvl, style: "display: block" %>
      <%= form.number_field :lvl %>
    </div>

    <div>
      <%= form.label :rank, style: "display: block" %>
      <%= form.select :rank, ['Opal', 'Sapphire', 'Emerald', 'Ruby', 'Diamond', 'Dragonstone', 'Onyx', 'Zenyte'] %>
    </div>

    <div>
      <%= form.label :title, style: "display: block" %>
      <%= form.text_field :title %>
    </div>
    <br>
    <div>
      <%= form.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
