<div class="container-fluid col-11" style="background-color: black">
  <table class="table table-striped table-dark table-hover table-sm table-responsive ">
    <thead>
      <tr>
        <th colspan='2'><%= link_to "Player Name", :sort => "name"%> </th>
        <th>Siege Score</th>
        <th>Clan Rank</th>
        <th><%= link_to "Needs Update", :sort => "needs_update"%> </th>
        <th>2 Months Gained</th>
        <th>Joined</th>
        <th>Last Updated</th>
        <th>Delete</th>
      </tr>
    </thead>
      <% @players.each do |player| %>
        <tr>
          <td style="text-align: center">
            <%= link_to "", edit_player_path(player), :class => "bi-pencil text-warning" %>
          </td>
          <td style="text-align: left">
            <%= link_to "#{player.name}", wom_url(player) %>
          </td>
          <td style="text-align: center">
            <%= player.score %>
          </td>
          <td style="text-align: center">
            <%= player.clan_rank %>
          </td>
          <td style="text-align: center">
            <% if player.needs_update %>
            <%= link_to '', {:controller => "players",
                              :action => "update_rank",
                              :id => player.id}, method: 'post', class: "bi-exclamation-octagon-fill text-danger" %>
            <% end %>
            <%= player.rank %>
          </td>
          <td style="text-align: center; color: <%= player.kickable %>">
            <%=  number_with_delimiter(player.two_month_gains, :delimiter => ',') %> <%= player.new_check %>
          </td>
          <td style="text-align: center">
            <%= player.created %>
          </td>
          <td style="text-align: center">
            <%= time_ago_in_words(player.updated_at) %> ago
          </td>
          <td style="text-align: center">
            <%= link_to "", delete_player_path(player), method: :get, :class => "bi-trash text-danger" %>
          </td>
        </tr>
      <% end %>
      <tr>
        <td colspan='8'>
          <div class="admin-table-footer" style="
            text-align: left;
            padding-left: 10px;
            font-size: smaller;
          ">
            <em>*OG = Player joined before 2023-02-26</em>
        </td>
        <td>
          <%= link_to "Export Players to CSV", href="/export.csv", :class => "btn btn-dark btn-sm" %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
