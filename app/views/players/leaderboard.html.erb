<style>
    .header{
        position:sticky;
        top: 0 ;
    }
</style>

<div class="container-fluid col-9" style="background-color: black">
	<div class="row">
		<div class="col-md">
      <table class="table table-dark table-hover table-responsive table-bordered">
        <thead class="header">
          <tr>
            <th style="text-align: center" colspan="3">
              🏆 &nbsp; Leaderboard &nbsp; 🏆
            </th>
          </tr>
          <tr>
            <th style="text-align: center" class="cols-3">
              Rank
            </th>
            <th style="text-align: left" class="col-6">
              Name
            </th>
            <th style="text-align: center" class="cols-3">
              Points
            </th>
        </thead>
        <tbody>
          <% @competitors.each_with_index do |player, index| %>
            <tr>
              <td style="text-align: center">
                <%= rank(index + 1) %>
              </td>
              <td style="text-align: left">
                <%= player.name %>
              </td>
              <td style="text-align: center">
                <%= player.score %>
              </td>
            </tr>
          <% end %>            
        </tbody>
      </table>
		</div>
  </div>
</div>
