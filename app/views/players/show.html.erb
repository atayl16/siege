<div class="container-fluid">
  <p style="color: green"><%= notice %></p>

  <%= render @player %>

  <div class="container-fluid">
    <%= link_to "Edit this player", edit_player_path(@player), :class => "btn btn-warning" %>
    <%= link_to "Back to players", root_path, method: :get, :class => "btn btn-info" %>
    <%= link_to "Add a new member", new_player_path, :class => "btn btn-secondary" %>
  </div>

  <div class="container-fluid">
    <%= button_to "Delete this player", @player, method: :delete, :class => "btn btn-danger" %>
  </div>
</div>