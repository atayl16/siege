<div class="card p-1 position-absolute top-50 start-50 translate-middle bg-dark text-white border">
  <h2 class="card-header text-white"><%= @player.name %>
  <hr/>
  </h2>

  <%= render @player %>

  <div class="card-footer btn-group">
      <%= link_to "Edit this player", edit_player_path(@player), :class => "btn btn-warning" %>
      <br>
      <%= link_to "Back to members", root_path, method: :get, :class => "btn btn-info" %>
      <br>
      <%= link_to "Add a new member", new_player_path, :class => "btn btn-success" %>
  </div>
  <div class="card-footer">
  <%= button_to "Delete this member", delete_player_path(@player), method: :get, :class => "btn btn-danger" %>
  </div>
</div>
