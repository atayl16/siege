<style>
    .header{
        position:sticky;
        top: 0 ;
    }
</style>

<div class="container-fluid col-9" style="background-color: black">
	<div class="row">
		<div class="col-md">
      <table class="table table-dark table-hover table-responsive table-bordered">
        <thead class="header">
          <tr>
            <th style="text-align: center" colspan="7">
              ðŸŽ‰ &nbsp; Reactivated Players &nbsp; ðŸŽ‰
            </th>
          </tr>
          <tr>
            <th style="text-align: left"">
              Name
            </th>
            <th style="text-align: left">
              Date Left
            </th>
            <th style="text-align: left">
              Date Reactivated
            </th>            
            <th style="text-align: left">
              XP on Exit
            </th> 
            <th style="text-align: left">
              XP on Readd
            </th>           
            <th style="text-align: left">
              Level on Exit
            </th>
            <th style="text-align: center">
              Level on Readd
            </th>
        </thead>
        <tbody>
          <% @reactivated_players.each do |player| %>
            <tr>
              <td style="text-align: left">
                <%= player.name %>
              </td>
              <td style="text-align: left">
                <%= player.deactivated_date %>
              </td>
              <td style="text-align: left">
                <%= player.reactivated_date %>
              </td>
              <td style="text-align: left">
                <%= number_with_delimiter(player.deactivated_xp, :delimiter => ',') %>
              </td>
              <td style="text-align: left">
                <%= number_with_delimiter(player.reactivated_xp, :delimiter => ',') %>
              </td>
              <td style="text-align: left">
                <%= number_with_delimiter(player.deactivated_lvl, :delimiter => ',') %>
              </td>
              <td style="text-align: left">
                <%= number_with_delimiter(player.reactivated_lvl, :delimiter => ',') %>
              </td>
            </tr>
          <% end %>        
        </tbody>
      </table>
      <table class="table table-dark table-hover table-responsive table-bordered">
        <thead class="header">
          <tr>
            <th style="text-align: center" colspan="5">
              &nbsp; Deleted Players &nbsp;
            </th>
          </tr>
          <tr>
            <th style="text-align: left"">
              Name
            </th>
            <th style="text-align: left">
              Date Left
            </th>            
            <th style="text-align: left">
              XP on Exit
            </th>            
            <th style="text-align: left">
              Level on Exit
            </th>
            <th style="text-align: center">
              Readd
            </th>
        </thead>
        <tbody>
          <% @deleted_players.each do |player| %>
            <tr>
              <td style="text-align: left">
                <%= player.name %>
              </td>
              <td style="text-align: left">
                <%= player.deactivated_date %>
              </td>
              <td style="text-align: left">
                <%= number_with_delimiter(player.deactivated_xp, :delimiter => ',') %>
              </td>
              <td style="text-align: left">
                <%= number_with_delimiter(player.deactivated_lvl, :delimiter => ',') %>
              </td>
              <td style="text-align: center">
                <%= link_to "", activate_player_path(player), method: :get, :class => "bi-plus-circle text-success" %>
              </td>
            </tr>
          <% end %>        
        </tbody>
      </table>
		</div>
  </div>
</div>
